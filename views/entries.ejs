<%-include("head")-%>

<%-include("../views/navigationGeneral")-%>

<script>

function deleteEntry(id) {
  if (confirm("Are you sure you want to delete this record?")) {
    $.ajax({
      url: '/teacher/' + id + '/delete',
      type: 'POST',
      success: function (result) {
        console.log("Record with id " + id + " was deleted successfully");
        location.reload(true);
      }
    });
  }
}




</script>


<style>
    .box {
      border: 1px solid black;
      box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
      position: absolute; top: 100px; left: 42%;
      padding: 25px;
      border-radius: 10px;
    }
    th{
        padding-left: 12px;
    }
  </style>
  

<div class="box">
    <h2>Entries</h2>
    <input type="text" id="searchInput" placeholder="&#x1F50D; Search for entries" style="padding: 10px; font-size: 16px; border-radius: 10px; border: 1px solid gray;">
    <table id="entriesTable" >
      <thead>
       
          <th>DATE</th>
          <th>CLASS</th>
          <th>SUBJECT</th>
          
      </thead>
      <tbody >
        <% for (var i = 0; i < users.length; i++) { %>
          <tr>
           
            <td style="padding: 5px;">
              <%= date %>
            </td>
            <td>
              <%= users[i].name %>
            </td>
            <td style="margin: 20px;">
                <%= users[i].jmeno %>
            </td>
            <td>
                <form action="/teacher/<%= users[i].id_entry %>/edit" method="get">
                    <input type="submit" value="Edit">
                </form>
            </td>
            <td>
                <input type="button" value="Delete" onclick="deleteEntry('<%= users[i].id_entry %>')">

            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
  <script>
    document.getElementById("searchInput").addEventListener("keyup", searchFunction);

    function searchFunction() {
      var input, filter, table, tr, td, i, txtValue;
      input = document.getElementById("searchInput");
      filter = input.value.toUpperCase();
      table = document.getElementById("entriesTable");
      tr = table.getElementsByTagName("tr");

      // Zobrazení hlavičky
      tr[0].style.display = "";

      // Procházení všech řádků tabulky
      for (i = 1; i < tr.length; i++) {
        td = tr[i].getElementsByTagName("td");
        var match = false;
        // Procházení všech sloupců v řádku
        for (var j = 0; j < td.length; j++) {
          txtValue = td[j].textContent || td[j].innerText;
          // Pokud obsahuje hledaný řetězec, zobraz řádek
          if (txtValue.toUpperCase().indexOf(filter) > -1) {
            match = true;
            break;
          }
        }
        if (match) {
          tr[i].style.display = "";
        } else {
          tr[i].style.display = "none";
        }
      }
    }
  </script>
  <style>
    input[type=text] {
      width: 200px;
      padding: 12px 20px;
      margin: 8px 0;
      box-sizing: border-box;
      border: 2px solid #ccc;
      border-radius: 4px;
      font-size: 16px;
    }
    </style>
