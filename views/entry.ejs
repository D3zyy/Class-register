<%-include("head")-%>

<%-include("../views/navigationGeneral")-%>

<style>
    .box {
      border: 1px solid black;
      box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.8);
      position: absolute; top: 100px; left: 42%;
      padding: 20px;
      border-radius: 10px;


    }
   
  th{
    margin-right: 5px;
 display: inline-block
  }
  </style>
  
<script src="../public/buttonAbsecneScript.js" ></script>
  
<div class="box">
  <form name="myForm" id="entry"  action="success"   method="POST"  >
    <table>
      <tr>
        <th>Teacher's name</th>
        <td>
          <input type="text" value="<%= teacherName %>" disabled>
          <input type="hidden" name="teacherName" value="<%= teacherName %>">
        </td>
      </tr>
      <tr>
        <th>Subject</th>
        <td>
          <input type="text" value="<%= subject %>" disabled>
          <input type="hidden" name="subject" value="<%= subject %>">
        </td>
      </tr>
      <tr>
        <th>Class</th>
        <td>
          <input type="text" value="<%= classNumber %>" disabled>
          <input type="hidden" name="classNumber" value="<%= classNumber %>">
        </td>
      </tr>
      <tr>
        <th>Lesson number</th>
        <td>
          <input type="text" value="<%= taughtHours %>" disabled>
          <input type="hidden" name="taughtHours" value="<%= taughtHours %>">
        </td>
      </tr>
      <tr>
        <th>Topic</th>
        <td>
          <input type="text" name="topic" >
        </td>
      </tr>
      <tr>
        <th>Notes</th>
        <td>
          <input type="text" name="notes" >
        </td>
      </tr>
      <tr>
        <th style="display: inline-block;" >Absence</th>
        <td>
          <select>
            <% users.forEach((user) => { %>
              <option value="<%= user.id_user %>"><%= user.firstName %> <%= user.lastName %></option>
            <% }); %>
          </select>
          <button onclick="addName()">+</button>
        </td>
      </tr>
      <tr>
        <td colspan="2">
          <input type="submit" value="Odeslat">
        </td>
      </tr>
    </table>
  </form> 
</div>
 





<%-include("../views/footer")-%>